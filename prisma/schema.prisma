generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}



model Guest {
  id    String    @id @default(uuid())
  name  String
  email String? @unique
  phone String?
  phoneCountryCode String?
  message String?
  confirmed Boolean @default(false)
  isCompanion Boolean @default(false)
  guestId String?
  guest Guest? @relation("GuestCompanions", fields: [guestId], references: [id], onDelete: Cascade)
  companions Guest[] @relation("GuestCompanions")
}

model PreliminaryGuest {
  id    String    @id @default(uuid())
  name  String    @unique
  confirmed Boolean @default(false)
  companions PreliminaryAssistant[]
  nCompanions Int @default(0)
}

model PreliminaryAssistant {
  id    String    @id @default(uuid())
  name  String
  confirmed Boolean @default(true)
  preliminaryGuestName String
  preliminaryGuestId String
  preliminaryGuest PreliminaryGuest @relation(fields: [preliminaryGuestId], references: [id], onDelete: Cascade)

}

